{
  "agent": {
    "metrics_collection_interval": {{ cloudwatch_metrics_interval | default(60) }},
    "run_as_user": "root",
    "logfile": "/opt/aws/amazon-cloudwatch-agent/logs/amazon-cloudwatch-agent.log"
  },
  "logs": {
    "logs_collected": {
      "files": {
        "collect_list": [
{% if 'webservers' in group_names %}
          {
            "file_path": "/var/log/nginx/access.log",
            "log_group_name": "{{ cloudwatch_log_group }}/nginx",
            "log_stream_name": "{instance_id}/access",
            "timezone": "UTC"
          },
          {
            "file_path": "/var/log/nginx/error.log",
            "log_group_name": "{{ cloudwatch_log_group }}/nginx",
            "log_stream_name": "{instance_id}/error",
            "timezone": "UTC"
          },
{% endif %}
{% if 'dbservers' in group_names %}
          {
            "file_path": "/var/lib/pgsql/{{ postgresql_version | default('15') }}/data/log/*.log",
            "log_group_name": "{{ cloudwatch_log_group }}/postgresql",
            "log_stream_name": "{instance_id}/postgresql",
            "timezone": "UTC"
          },
{% endif %}
          {
            "file_path": "/var/log/messages",
            "log_group_name": "{{ cloudwatch_log_group }}/system",
            "log_stream_name": "{instance_id}/messages",
            "timezone": "UTC"
          },
          {
            "file_path": "/var/log/secure",
            "log_group_name": "{{ cloudwatch_log_group }}/security",
            "log_stream_name": "{instance_id}/secure",
            "timezone": "UTC"
          },
          {
            "file_path": "/var/log/audit/audit.log",
            "log_group_name": "{{ cloudwatch_log_group }}/audit",
            "log_stream_name": "{instance_id}/audit",
            "timezone": "UTC"
          }
{% for log in cloudwatch_additional_logs | default([]) %}
          ,{
            "file_path": "{{ log.path }}",
            "log_group_name": "{{ cloudwatch_log_group }}/{{ log.group }}",
            "log_stream_name": "{instance_id}/{{ log.stream }}",
            "timezone": "UTC"
          }
{% endfor %}
        ]
      }
    },
    "log_stream_name": "{instance_id}",
    "force_flush_interval": 15
  },
  "metrics": {
    "namespace": "{{ cloudwatch_metrics_namespace | default('Chikwex/EC2') }}",
    "metrics_collected": {
      "cpu": {
        "measurement": [
          "cpu_usage_idle",
          "cpu_usage_iowait",
          "cpu_usage_user",
          "cpu_usage_system"
        ],
        "metrics_collection_interval": {{ cloudwatch_metrics_interval | default(60) }},
        "totalcpu": true
      },
      "disk": {
        "measurement": [
          "used_percent",
          "inodes_free"
        ],
        "metrics_collection_interval": {{ cloudwatch_metrics_interval | default(60) }},
        "resources": [
          "/"
        ]
      },
      "diskio": {
        "measurement": [
          "io_time",
          "write_bytes",
          "read_bytes",
          "writes",
          "reads"
        ],
        "metrics_collection_interval": {{ cloudwatch_metrics_interval | default(60) }},
        "resources": [
          "*"
        ]
      },
      "mem": {
        "measurement": [
          "mem_used_percent",
          "mem_available_percent"
        ],
        "metrics_collection_interval": {{ cloudwatch_metrics_interval | default(60) }}
      },
      "netstat": {
        "measurement": [
          "tcp_established",
          "tcp_time_wait"
        ],
        "metrics_collection_interval": {{ cloudwatch_metrics_interval | default(60) }}
      },
      "swap": {
        "measurement": [
          "swap_used_percent"
        ],
        "metrics_collection_interval": {{ cloudwatch_metrics_interval | default(60) }}
      }
    },
    "append_dimensions": {
      "AutoScalingGroupName": "${aws:AutoScalingGroupName}",
      "ImageId": "${aws:ImageId}",
      "InstanceId": "${aws:InstanceId}",
      "InstanceType": "${aws:InstanceType}"
    },
    "aggregation_dimensions": [
      ["InstanceId"],
      ["AutoScalingGroupName"]
    ]
  }
}
