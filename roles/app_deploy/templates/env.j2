# Application Environment Variables
# Managed by Ansible - Do not edit manually
# {{ ansible_managed }}

# Application Settings
APP_NAME={{ app_name }}
APP_ENV={{ environment_name | default('production') }}
APP_DEBUG={{ app_debug | default('false') }}

{% if app_env_vars is defined %}
{% for key, value in app_env_vars.items() %}
{{ key }}={{ value }}
{% endfor %}
{% endif %}

# Database (if configured)
{% if app_database_url is defined %}
DATABASE_URL={{ app_database_url }}
{% endif %}
{% if app_db_host is defined %}
DB_HOST={{ app_db_host }}
DB_PORT={{ app_db_port | default('5432') }}
DB_NAME={{ app_db_name }}
DB_USER={{ app_db_user }}
DB_PASSWORD={{ app_db_password }}
{% endif %}

# Redis (if configured)
{% if app_redis_url is defined %}
REDIS_URL={{ app_redis_url }}
{% endif %}

# AWS (if configured)
{% if aws_region is defined %}
AWS_REGION={{ aws_region }}
AWS_DEFAULT_REGION={{ aws_region }}
{% endif %}
