# Nginx Main Configuration
# Managed by Ansible - Do not edit manually
# {{ ansible_managed }}

user nginx;
worker_processes {{ nginx_worker_processes | default('auto') }};
error_log {{ nginx_error_log | default('/var/log/nginx/error.log') }} warn;
pid /run/nginx.pid;

# Load dynamic modules
include /usr/share/nginx/modules/*.conf;

events {
    worker_connections {{ nginx_worker_connections | default(1024) }};
    use epoll;
    multi_accept on;
}

http {
    # Basic Settings
    sendfile on;
    tcp_nopush on;
    tcp_nodelay on;
    keepalive_timeout {{ nginx_keepalive_timeout | default(65) }};
    types_hash_max_size 2048;
    server_tokens off;

    # Request size limits
    client_max_body_size {{ nginx_client_max_body_size | default('64M') }};
    client_body_buffer_size 128k;
    client_header_buffer_size 1k;
    large_client_header_buffers 4 16k;

    # Timeouts
    client_body_timeout 60;
    client_header_timeout 60;
    send_timeout 60;

    # MIME Types
    include /etc/nginx/mime.types;
    default_type application/octet-stream;

    # Logging
    log_format main '$remote_addr - $remote_user [$time_local] "$request" '
                    '$status $body_bytes_sent "$http_referer" '
                    '"$http_user_agent" "$http_x_forwarded_for"';

    log_format json escape=json '{'
        '"time":"$time_iso8601",'
        '"remote_addr":"$remote_addr",'
        '"remote_user":"$remote_user",'
        '"request":"$request",'
        '"status":$status,'
        '"body_bytes_sent":$body_bytes_sent,'
        '"request_time":$request_time,'
        '"http_referrer":"$http_referer",'
        '"http_user_agent":"$http_user_agent",'
        '"http_x_forwarded_for":"$http_x_forwarded_for"'
    '}';

    access_log {{ nginx_access_log | default('/var/log/nginx/access.log') }} main;

{% if nginx_gzip_enabled | default(true) %}
    # Gzip Compression
    gzip on;
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_buffers 16 8k;
    gzip_http_version 1.1;
    gzip_min_length 256;
    gzip_types
{% for type in nginx_gzip_types | default(['text/plain', 'text/css', 'application/json', 'application/javascript', 'text/xml', 'application/xml']) %}
        {{ type }}
{% endfor %}
        ;
{% endif %}

{% if nginx_rate_limit_enabled | default(false) %}
    # Rate Limiting
    {{ nginx_rate_limit_zone | default('limit_req_zone $binary_remote_addr zone=req_limit:10m rate=10r/s') }};
{% endif %}

    # Proxy Settings
    proxy_connect_timeout {{ nginx_proxy_connect_timeout | default(60) }};
    proxy_send_timeout {{ nginx_proxy_send_timeout | default(60) }};
    proxy_read_timeout {{ nginx_proxy_read_timeout | default(60) }};
    proxy_buffer_size 4k;
    proxy_buffers 4 32k;
    proxy_busy_buffers_size 64k;
    proxy_temp_file_write_size 64k;

    # Proxy Headers
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Forwarded-Host $host;
    proxy_set_header X-Forwarded-Port $server_port;

    # Security Headers (applied globally)
    add_header X-Frame-Options "{{ nginx_security_headers['X-Frame-Options'] | default('SAMEORIGIN') }}" always;
    add_header X-Content-Type-Options "{{ nginx_security_headers['X-Content-Type-Options'] | default('nosniff') }}" always;
    add_header X-XSS-Protection "{{ nginx_security_headers['X-XSS-Protection'] | default('1; mode=block') }}" always;
    add_header Referrer-Policy "{{ nginx_security_headers['Referrer-Policy'] | default('strict-origin-when-cross-origin') }}" always;

    # Include additional configurations
    include /etc/nginx/conf.d/*.conf;
    include /etc/nginx/sites-enabled/*;
}
