# Default Server Block
# Managed by Ansible - Do not edit manually
# {{ ansible_managed }}

{% if nginx_ssl_enabled | default(false) %}
# Redirect HTTP to HTTPS
server {
    listen 80 default_server;
    listen [::]:80 default_server;
    server_name {{ nginx_server_name | default('_') }};

    # Allow Let's Encrypt challenges
    location /.well-known/acme-challenge/ {
        root /var/www/letsencrypt;
    }

    location / {
        return 301 https://$host$request_uri;
    }
}

# HTTPS Server
server {
    listen {{ nginx_listen_port_ssl | default(443) }} ssl http2 default_server;
    listen [::]:{{ nginx_listen_port_ssl | default(443) }} ssl http2 default_server;
    server_name {{ nginx_server_name | default('_') }};

    # SSL Configuration
    ssl_certificate {{ nginx_ssl_certificate }};
    ssl_certificate_key {{ nginx_ssl_certificate_key }};
    include /etc/nginx/snippets/ssl-params.conf;

{% else %}
# HTTP Server
server {
    listen {{ nginx_listen_port | default(80) }} default_server;
    listen [::]:{{ nginx_listen_port | default(80) }} default_server;
    server_name {{ nginx_server_name | default('_') }};
{% endif %}

    # Root directory
    root {{ nginx_static_root | default('/var/www/html') }};
    index index.html index.htm;

    # Logging
    access_log /var/log/nginx/{{ nginx_server_name | default('default') }}_access.log main;
    error_log /var/log/nginx/{{ nginx_server_name | default('default') }}_error.log;

{% if nginx_rate_limit_enabled | default(false) %}
    # Rate limiting
    limit_req zone=req_limit burst={{ nginx_rate_limit_burst | default(20) }} nodelay;
{% endif %}

    # Static files
    location /static/ {
        alias {{ nginx_static_root | default('/var/www/static') }}/;
        expires 30d;
        add_header Cache-Control "public, immutable";
    }

    location /media/ {
        alias {{ nginx_media_root | default('/var/www/media') }}/;
        expires 7d;
        add_header Cache-Control "public";
    }

    # Favicon and robots
    location = /favicon.ico {
        log_not_found off;
        access_log off;
    }

    location = /robots.txt {
        log_not_found off;
        access_log off;
    }

    # Serve static content or proxy to application
    location / {
{% if nginx_proxy_enabled | default(false) %}
{% if nginx_upstreams is defined and nginx_upstreams | length > 0 %}
        proxy_pass http://{{ nginx_upstreams[0].name }};
{% else %}
        proxy_pass {{ nginx_proxy_pass_url | default('http://127.0.0.1:8000') }};
{% endif %}
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
{% else %}
        try_files $uri $uri/ =404;
{% endif %}
    }

    # Deny access to hidden files
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
}
